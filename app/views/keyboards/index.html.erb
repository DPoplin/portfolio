<p id="notice"><%= notice %></p>

<h1>Keyboards</h1>
<div class="album py-5 bg-dark">
            <% @keyboards.each do |keyboard| %>
            <div class="container">
                <div class="col">
                    <div class="card shadow-sm">
                        <svg class=" card-img-top" width="100%" height="225"
                            preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title><%= keyboard.name %></title>
                            <%= image_tag keyboard.photo %>
                        </svg>

                        <div class="card-body">
                            <div class="card-text">
                                <p>Keyboard: <%= keyboard.name %></p>
                                <p>Switches: <%= keyboard.switches %></p>
                                <p>Keycaps: <%= keyboard.keycaps %></p>
                                <p>Build Date: <%= keyboard.build_date %></p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button"
                                        class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', keyboard %></button>
                                    <button type="button"
                                        class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_keyboard_path(keyboard) %></button>
                                    <button type="button"
                                        class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', keyboard, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
        </div>

<%= link_to 'New Keyboard', new_keyboard_path %>